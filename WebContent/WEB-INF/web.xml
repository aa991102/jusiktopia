<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
				xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>pro1</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>

<servlet>
     <servlet-name>DBCPInit</servlet-name>
     <servlet-class>util.DBCPInit</servlet-class>
     <load-on-startup>2</load-on-startup>
 </servlet>
 
 <servlet>
     <servlet-name>MySQLDriverLoader</servlet-name>
     <servlet-class>util.MySQLDriverLoader</servlet-class>
     <load-on-startup>1</load-on-startup>
 </servlet>
 
<servlet>
 	<servlet-name>kospiece</servlet-name>
 	<servlet-class>controller.MainServlet</servlet-class>
 </servlet>
 
 <servlet-mapping>
 	<servlet-name>kospiece</servlet-name>
 	<url-pattern>/kospiece</url-pattern>
 </servlet-mapping>
 
 <jsp-config>
 	<jsp-property-group>
 		<url-pattern>*.jsp</url-pattern>
 		<include-prelude>/header.jspf</include-prelude>
 		<include-coda>/footer.jspf</include-coda>
 	</jsp-property-group>
 </jsp-config>

</web-app>
